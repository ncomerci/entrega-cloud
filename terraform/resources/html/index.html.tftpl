		<script>
			function getMedicalRecords() {
				var xhttp = new XMLHttpRequest();
				xhttp.onreadystatechange = function () {
					if (this.readyState == 4 && this.status == 200) {
						document.getElementById("replace").innerHTML = this.responseText;
					}
				};

			xhttp.open("GET", "${ENDPOINT}/medical-records", true);
			xhttp.send();   
			}

			function postMedicalRecord() {
				var xhttp = new XMLHttpRequest();
				xhttp.onreadystatechange = function () {
					if (this.readyState == 4 && this.status == 200) {
						document.getElementById("replacemedical").innerHTML = "Anda al bucket de medical-record y fijate que hay un file-name.txt";
					}
				};

			xhttp.open("POST", "${ENDPOINT}/medical-records", true);
			xhttp.send();   
			}

			function postAppointment() {
				var xhttp = new XMLHttpRequest();
				xhttp.onreadystatechange = function () {
					if (this.readyState == 4 && this.status == 200) {
						document.getElementById("replaceappointment").innerHTML = "Anda a DynamoDB y fijate que hay appointments en appointments-table";
					}
				};

			xhttp.open("POST", "${ENDPOINT}/appointments", true);
			xhttp.send();   
			}

		</script>
